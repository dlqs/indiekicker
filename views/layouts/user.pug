extends ../_bootstrap
append styles
	// Custom styles for this template
	link(href='../css/starter-template.css', rel='stylesheet')
block body
	.container
		+navbar-fixed('indiekicker', 'navbar')
			li
				a Hello, #{session.name}
			+nav_item("/") Home
			+nav_item("/project/all/1") Projects
			+nav_item("/category/all/1") Categories
			+nav_item("/user/" + session.userid, "active") My profile
			form.navbar-form.navbar-nav
				.form-group
					input.form-control(type='text', placeholder='Search keyword')
				button.btn.btn-success(type='submit') Search
			form.navbar-form.navbar-right(method='post', action='/logout')
				button.btn.btn-primary(type='submit') Logout
	.container
		.starter-template
			h1 Hello, #{session.name}.
			p.lead
				| Welcome to your profile.
		form(method='post')
			h2.form-signin-heading Change profile information
			label.sr-only(for='name') Name
			input#name.form-control(type='text', placeholder=`${session.name}`, autofocus='', name='name')
			br
			label.sr-only(for='username') Username
			input#username.form-control(type='text', placeholder=`${session.username}`, autofocus='', name='username')
			br
			label.sr-only(for='inputPassword') Password
			input#password.form-control(type='password', placeholder='New Password (at least 6 characters)', autofocus='', name='password')
			br
			label.sr-only(for='inputPassword') Confirm password
			input#passwordConfirm.form-control(type='password', placeholder='Confirm Password', autofocus='', name='passwordconfirm'
			br
			onblur='if ($("#password").val()!==$("#passwordConfirm").val()) { $("#passwordConfirm").css({\'background-color\': \'#f2dede\' }) } else { $("#passwordConfirm").css({\'background-color\':\'#fff\'}) } ')
			br
			label.sr-only(for='email') Email address
			input#email.form-control(type='text', placeholder=`${session.email}`, autofocus='', name='email')
			br
			button.btn.btn-lg.btn-primary.btn-block(type='submit') Confirm change
			br
			if (error)
				each message in error
					+alert-warning(message)
			if (success)
				each message in success
					+alert-warning(message)
	

