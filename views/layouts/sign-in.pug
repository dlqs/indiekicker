extends ../_bootstrap
append styles
	// Custom styles for this template
	link(href='/css/signin.css', type='text/css', rel='stylesheet')
block body
	.container
		form.form-signin(method='post')
			h2.form-signin-heading Please sign in
			label.sr-only(for='username') username
			input#username.form-control(type='text', placeholder='Username' required='', autofocus='', name='username')
			label.sr-only(for='inputPassword') Password
			input#inputPassword.form-control(type='password', placeholder='Password', required='', name='password')
			br
			if (warning)
				each message in warning
					+alert-warning(message)
			if (success)
				each message in success
					+alert-success(message)
			button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in
			br
			+a-btn('/login/register', 'lg btn-info btn-block') Register


